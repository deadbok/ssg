#! /usr/bin/env python
'''
Main file for Static Site Generator
'''
import os
import ssg


def main():
    '''
    The entry point.
    '''
    try:
        ssg.init(True)
        root = os.getcwd()
        contents = ssg.process_content(root + '/'
                                       + ssg.settings.SETTINGS['CONTENTDIR'])
        ssg.apply_templates(root + '/templates', contents)
    finally:
        ssg.close()


if __name__ == '__main__':
    main()
